@model SoftwareSearchViewModel
@{
    ViewData["Title"] = "Software Search";
}

<div>
    <h1 class="display-4">Software Products Search</h1>
    <p>
        Enter a version number in the text box below to get a list of all software products used by Imaginary
        Company which have a version number greater than the one entered.
    </p>
    <form method="get" asp-action="SoftwareSearchList">
        <input type="text" asp-for="SearchString" />
        <button type="submit">Search</button>
    </form>

    @if (Model != null && Model.SoftwareResults != null && Model.SoftwareResults.Any())
    {
        <ul>
            @foreach (var softwareResult in @Model.SoftwareResults)
            {
                <li>@softwareResult.Name (@softwareResult.Version)</li>
            }
        </ul>
    }

    

</div>
